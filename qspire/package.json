{
  "name": "qspire",
  "displayName": "QSpire - Quantum Code Smell Detector",
  "description": "Detect Quantum Code Smells in Qiskit Framework for Python with Static and Dynamic Analysis",
  "version": "0.0.1",
  "publisher": "Riccardoalfieri2003",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Riccardoalfieri2003/qspire"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "quantum",
    "qiskit",
    "code smells",
    "quantum computing",
    "static analysis",
    "dynamic analysis"
  ],
  
  "activationEvents": [
    "onStartupFinished",
    "onCommand:qspire.helloWorld",
    "onCommand:mytool.analyzeFile",
    "onCommand:mytool.showGui",
    "onCommand:mytool.toggleGui"
  ],

  "main": "./out/extension.js",
  "contributes": {

    "menus": {
      "editor/title": [
        {
          "command": "mytool.toggleGui",
          "group": "navigation",
          "when": "editorLangId == python"
        }
      ]
    },


    "commands": [

      {
        "command": "qspire.helloWorld",
        "title": "Hello World"
      },

      {
        "command": "mytool.analyzeFile",
        "title": "Analyze Code File"
      },

      {
        "command": "mytool.showGui",
        "title": "Open Analyzer GUI"
      },

      {
        "command": "mytool.toggleGui",
        "title": "Toggle Analyzer GUI"
      },

      {
        "command": "mytool.toggleGui",
        "title": "Toggle QSpire Tool",
        "icon": "$(chip)"
      }

    ]
  },
   "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
