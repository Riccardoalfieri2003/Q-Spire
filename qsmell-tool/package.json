{
  "name": "qsmell-tool",
  "displayName": "QSmell_Tool",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  
  "activationEvents": [
    "onStartupFinished",
    "onCommand:qsmell-tool.helloWorld",
    "onCommand:mytool.analyzeFile",
    "onCommand:mytool.showGui",
    "onCommand:mytool.toggleGui"
  ],

  "main": "./out/extension.js",
  "contributes": {

    "menus": {
      "editor/title": [
        {
          "command": "mytool.toggleGui",
          "group": "navigation",
          "when": "editorLangId == python"
        }
      ]
    },


    "commands": [

      {
        "command": "qsmell-tool.helloWorld",
        "title": "Hello World"
      },

      {
        "command": "mytool.analyzeFile",
        "title": "Analyze Code File"
      },

      {
        "command": "mytool.showGui",
        "title": "Open Analyzer GUI"
      },

      {
        "command": "mytool.toggleGui",
        "title": "Toggle Analyzer GUI"
      },

      {
        "command": "mytool.toggleGui",
        "title": "Toggle QSpire Tool",
        "icon": "$(chip)"
      }

    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
